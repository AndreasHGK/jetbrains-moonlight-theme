<idea-plugin>
    <id>org.franciscode.moonlight-jetbrains-theme</id>
    <name>MoonLight Dark Theme</name>
    <vendor email="francmarinc@gmail.com" url="https://github.com/francmarin98">FrancisCode</vendor>

    <description><![CDATA[
    A friendly dark theme for those long coding sessions.<br>
    <em>Would you like to collaborate, do not hesitate to do it!!</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <themeProvider id="francisco-moonlight-theme" path="/theme/moonlight-theme.json" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>